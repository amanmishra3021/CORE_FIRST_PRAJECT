<div class="row">
    <div class="col-md-4">
        <form asp-action="ADD_EMP">
            <input type="hidden"asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input asp-for="Name" class="form-control" />
